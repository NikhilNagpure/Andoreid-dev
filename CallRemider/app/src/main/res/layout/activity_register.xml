<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.heniktechnology.callremider.register_user.RegisterActivity">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <com.heniktechnology.callremider.material_view.MaterialEditText
            android:id="@+id/mactvUserFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_name"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            app:met_baseColor="@color/colorThemeBlue"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@color/colorThemeBlue"
            app:met_helperTextColor="@color/colorThemeBlue"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true"
        />
        <com.heniktechnology.callremider.material_view.MaterialEditText
            android:id="@+id/mactvUserLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_name"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            app:met_baseColor="@color/colorThemeBlue"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@color/colorThemeBlue"
            app:met_helperTextColor="@color/colorThemeBlue"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true"
        />
        <com.heniktechnology.callremider.material_view.MaterialEditText
            android:id="@+id/mactvUserLoginID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_name"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            app:met_baseColor="@color/colorThemeBlue"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@color/colorThemeBlue"
            app:met_helperTextColor="@color/colorThemeBlue"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true"
        />
        <com.heniktechnology.callremider.material_view.MaterialEditText
            android:id="@+id/mactvUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_name"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            app:met_baseColor="@color/colorThemeBlue"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@color/colorThemeBlue"
            app:met_helperTextColor="@color/colorThemeBlue"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true"
        />
    </LinearLayout>

</RelativeLayout>
